<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FirebaseCrud" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor"> #296D98</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>
    <style name="changeBackgroundColor"  parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="colorSurface">@color/blue_shade_1</item>
    </style>
    <style name="DropDown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor"> #296D98</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="endIconTint">@color/white</item>
        <item name="endIconDrawable">@drawable/ic_baseline_keyboard_arrow_down_24</item>
    </style>
    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">

        <item name="android:background">@drawable/round_drawable</item>

    </style>
</resources>